-D BUILD_EXAMPLES=OFF \
-D BUILD_opencv_python2=OFF \
-D WITH_FFMPEG=1 \
-D WITH_CUDA=0 \
-D PYTHON3_EXECUTABLE=/home/ajackow/anaconda3/bin/python \
-D PYTHON_INCLUDE_DIR=/home/ajackow/anaconda3/include/python3.6m \
-D PYTHON_INCLUDE_DIR2=/home/ajackow/anaconda3/include/python3.6m \
-D PYTHON_LIBRARY=/home/ajackow/anaconda3/lib/libpython3.6m.so \
-D PYTHON3_PACKAGES_PATH=/home/ajackow/anaconda3/lib/python3.6 \
-D PYTHON3_NUMPY_INCLUDE_DIRS=/home/ajackow/anaconda3/lib/python3.6/site-packages/numpy/core/include ..
